	private char translatey(int y)
	{
		char cord = 0;
		
		if(y==0)
		{
			cord='A';
		}
		if(y==1)
		{
			cord='B';
		}
		if(y==2)
		{
			cord='C';
		}
		if(y==3)
		{
			cord='D';
		}
		if(y==4)
		{
			cord='E';
		}
		if(y==5)
		{
			cord='F';
		}
		if(y==6)
		{
			cord='G';
		}
		if(y==7)
		{
			cord='H';
		}
		
		
		
		return cord;
	}
	
